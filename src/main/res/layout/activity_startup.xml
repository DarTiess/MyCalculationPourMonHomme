<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingTop="?attr/actionBarSize"
    android:background="@drawable/sobakaen">

      <TextView
          android:id="@+id/headers"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="22sp"
          tools:layout_editor_absoluteX="44dp"
          tools:layout_editor_absoluteY="26dp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  android:orientation="horizontal">
  <TextView
      android:id="@+id/dateNowDays"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:text="dateNowDays"
      android:textColor="#778899"
      android:textSize="15dp" />
  <ImageView
      android:layout_width="35dp"
      android:layout_height="35dp"
      android:src="@drawable/unnamed"
      android:layout_gravity="right"
      android:onClick="onRefresh"
      android:clickable="true"/>
</LinearLayout>


      <TextView
          android:id="@+id/depositBalance"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="deposit Balance"
          android:textSize="20dp" />

      <Button
          android:id="@+id/addNewOne"
          android:layout_width="89dp"
          android:layout_height="74dp"
          android:onClick="addNewOne"
          android:text="Add New Calculation"
          android:layout_gravity="right"/>

      <ImageButton
          android:layout_width="116dp"
          android:layout_height="70dp"
          android:layout_gravity="right"
          android:onClick="onClickDepositList"
          android:scaleType="fitStart"
          android:src="@drawable/hjk" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Цели : "
          android:layout_gravity="right"
          android:textSize="23dp"
          android:textColor="#FAF0E6"/>
      <ScrollView
          android:layout_width="wrap_content"
          android:layout_height="160dp"
          android:layout_gravity="right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

          <ImageButton
              android:layout_width="114dp"
              android:layout_height="84dp"
              android:layout_gravity="right"
              android:onClick="onClickHoliday"
              android:scaleType="fitStart"
              android:src="@drawable/holiday" />
          <ImageButton
              android:layout_width="match_parent"
              android:layout_height="85dp"
              android:layout_gravity="right"
              android:onClick="onClickHoliday"
              android:scaleType="fitStart"
              android:src="@drawable/cardog"/>
          <ImageButton
              android:layout_width="match_parent"
              android:layout_height="84dp"
              android:layout_gravity="right"
              android:onClick="onClickHoliday"
              android:scaleType="centerInside"
              android:src="@drawable/appartament" />
        </LinearLayout>
      </ScrollView>


      <Button
          android:id="@+id/addOneMore"
          android:layout_width="89dp"
          android:layout_height="74dp"
          android:onClick="addOneMore"
          android:text="Добавить расход"
          android:layout_gravity="right"/>

    </LinearLayout>

